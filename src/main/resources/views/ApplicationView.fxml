<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Pos?>
<?import com.jfoenix.controls.*?>
 
<VBox 
    spacing="15" 
    alignment="CENTER" 
    styleClass="sign-in-box" 
    fx:controller="com.tems.controllers.ApplicationController" 
    xmlns="http://javafx.com/javafx"
    xmlns:jfx="http://javafx.com/javafx/8.0.0"
    xmlns:fx="http://javafx.com/fxml" 
    fx:id="mainBox"
    stylesheets="@/styles/styles.css">
    <Label text="Create Application" styleClass="sub-header"/>
    
    <JFXTextField promptText="Resume" fx:id="resumeField" styleClass="input-field"/>
    <JFXTextField promptText="Cover Letter" fx:id="coverLetterField" styleClass="input-field"/>
    
    <JFXButton text="Create" onAction="#submit" styleClass="toggle-button"/>
</VBox> 