<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Pos?>
<?import com.jfoenix.controls.*?>
<?import org.controlsfx.control.CheckComboBox?>
 
<VBox 
    spacing="15" 
    alignment="CENTER" 
    styleClass="sign-in-box" 
    fx:controller="com.tems.controllers.SignUpController" 
    xmlns="http://javafx.com/javafx"
    xmlns:jfx="http://javafx.com/javafx/8.0.0"
    xmlns:fx="http://javafx.com/fxml" 
    fx:id="mainBox"
    stylesheets="@/styles/styles.css">
    <Label text="Sign Up" styleClass="sub-header"/>
    
    <JFXTextField promptText="Name" fx:id="nameField" styleClass="input-field"/>
    <JFXTextField promptText="Email" fx:id="emailField" styleClass="input-field"/> 
    <JFXTextField promptText="Company" fx:id="companyField" styleClass="input-field"/> 
    <JFXTextField promptText="Application Information" fx:id="infoField" styleClass="input-field"/>
    <JFXPasswordField promptText="Password" fx:id="passwordField" styleClass="input-field"/>
    
    <JFXButton text="Submit Request" onAction="#submitRequest" styleClass="sign-in-button"/>
    <JFXButton text="Return To Main Page" onAction="#handleHomeView" styleClass="toggle-button"/>
</VBox> 